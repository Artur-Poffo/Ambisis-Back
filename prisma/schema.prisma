generator client {
  provider = "prisma-client-js"
  output   = "./generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

/**
 * Durante este desafio técnico, optei por manter MER simples, como descrito na documentação.
 * No entanto, é importante ressaltar que, em um cenário real, o MER seria mais detalhado.
 * Isso incluiria, por exemplo, a criação de tabelas separadas para armazenar informações de endereço
 * e de órgãos ambientais, cada uma com seus próprios relacionamentos específicos.
 */

model Company {
  id String @id @default(cuid())

  company_name String
  cnpj         String

  zip_code     String
  city         String
  state        String
  neighborhood String
  street       String
  complement   String?

  environmental_license EnvironmentalLicense[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("companies")
}

model EnvironmentalLicense {
  id String @id @default(cuid())

  license_number       String
  environmental_agency String

  issued_at   DateTime
  valid_until DateTime

  company    Company @relation(fields: [company_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
  company_id String

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("environmental_licenses")
}
